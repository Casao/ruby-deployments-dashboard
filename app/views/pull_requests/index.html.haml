.row
  .small-12.columns
    %h1
      Pull Requests
.row
  .accordion
    %dt.accordion-active.commit.small-12.columns.end-of-header
      Pull / Title / Date Opened
    %dd
      - @teams.each_with_index do |team, i|
        .small-12.medium-6.large-4.columns{class: (i == (@teams.size - 1) ? 'end' : '') }
          = check_box_tag(team.id)
          = label_tag(team.id, team.name)

%br
- @pulls.each do |pull|
  .row.commit
    .small-12.large-3.columns
      = image_tag(pull.user_avatar, class: 'gravatar')
      = pull.user_login
    .small-12.large-6.columns.deployment-message
      = link_to "##{pull.pull_number} #{pull.title}", pull.url
    .small-12.large-3.columns.deployment-time
      = pull.created_at