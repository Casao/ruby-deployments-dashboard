.row
  .small-12.columns
    %h1 CBMTN Deployments
.row.commit
  .small-12.columns.end-of-header
    Deployer / Title / Deployment Started
%br
- @pulls.each do |pull|
  .row.commit
    .small-12.large-3.columns
      = image_tag(pull.user.avatar_url, class: 'gravatar')
      = pull.user.login
    .small-12.large-6.columns.deployment-message
      = link_to pull.title, main_app.version_path(:id => pull.number.to_s)
    .small-12.large-3.columns.deployment-time
      = pull.merged_at.in_time_zone("Eastern Time (US & Canada)").strftime('%m/%d/%Y | %I:%M %p EST')